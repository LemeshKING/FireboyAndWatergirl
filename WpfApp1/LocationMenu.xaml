<Window x:Class="WpfApp1.LocationMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LocationMenu" Height="450" Width="800">
    <Grid>
        <Image Source="/locationMenu.jpg" Stretch="Fill"/>
        <Button Content="Level1" HorizontalAlignment="Left" Margin="77,197,0,0" VerticalAlignment="Top" Width="200" Height="100" Click="Button_Click_1" FontSize="48" Foreground="White" Background="Black"/>
        <Button Content="level2" HorizontalAlignment="Left" Margin="316,197,0,0" VerticalAlignment="Top" Width="200" Height="100" Click="Button_Click" FontSize="48" Foreground="White" Background="Black"/>
        <Button Content="level3" HorizontalAlignment="Left" Margin="555,197,0,0" VerticalAlignment="Top" Width="200" Height="100" Click="Button_Click_2" FontSize="48" Foreground="White" Background="Black"/>
        <MediaElement  Source="intro.mp3" x:Name="Intro" Volume="0.5" LoadedBehavior="Manual" UnloadedBehavior="Manual" Loaded="Intro_Loaded"/>


    </Grid>
</Window>
